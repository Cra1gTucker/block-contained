{

    "description": "Block Contained helps load websites faster inside the GFW.",
    "manifest_version": 2,
    "name": "Block Contained: Faster loading for Chinese users",
    "short_name": "BlockContained",
    "version": "1.0",
    "author": "James Shu",
    "icons": {
      "48": "icons/icon-48.png",
      "72": "icons/icon-72.png"
    },
    "options_ui": {
      "page": "options/options.html"
    },
    "permissions": [
      "activeTab",
      "webRequest",
      "webRequestBlocking",
      "*://*/*",
      "storage"
    ],
    "browser_action": {
      "default_icon": "icons/icon-32.png",
      "default_title": "Block Contained",
      "default_popup": "popup/main_popup.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "web_accessible_resources": [
      "resources/*.js",
      "resources/*.css"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "block@contained"
      }
    }
  }